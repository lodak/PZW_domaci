<UserControl x:Class="dz2.kontrola1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dz2"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="90">
    
    <StackPanel x:Name="user" Orientation="Vertical">
        <TextBlock x:Name="UserNameTextBlock" Height="15" Width="90"/>
        <TextBlock x:Name="imagesource" Margin="35,0,40,0" Height="1"/>
        <Image x:Name="slika"  Height="60" Source="{Binding Text, ElementName=imagesource}" />
        <StackPanel Orientation="Horizontal" Height="15">
            <Button x:Name="Edit" Click="Edit_Click" Height="15" Width="45" FontSize="7" Content="Edit"/>
            <Button x:Name="Delete" Click="Delete_Click" Height="15" Width="45" FontSize="7" Content="Delete"/>
        </StackPanel>
    

    </StackPanel>
   
</UserControl>
