<Window x:Class="dz2.edit2_win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dz2"
        mc:Ignorable="d"
        Title="edit2_win" Height="200" Width="500">
    <Grid>
        <Label x:Name="label" Content="Ime:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="23" Margin="47,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Label x:Name="komentar" Content="Komentar:" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="KomentarTextBox" HorizontalAlignment="Left" Height="75" Margin="75,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400"/>
        <Button x:Name="button_ok" Click="button_ok_Click" Content="Save" HorizontalAlignment="Left" Margin="304,144,0,0" VerticalAlignment="Top" Width="76"/>
        <Button x:Name="button_cancle" Click="button_cancle_Click" Content="Cancle" HorizontalAlignment="Left" Margin="399,144,0,0" VerticalAlignment="Top" Width="76"/>
    </Grid>
</Window>
